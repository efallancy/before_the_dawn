header{
	margin: 3px solid white;
	height: 1000px;
	width: 50px;
	margin: 40px;
}

#title{
		margin: 0px auto;
    // margin-top: px;
    text-align: center;
    line-height: 40vh;
    font-size: 50px;
}

.panel {
		height: 100vh;
		width: 100vw;
	}
	.panel.s3 {
		margin-bottom: 400px
	}

	.s1{
		color: white;
		background-color: #000;
	}

	.s2{
		background-color: #000;
	}

	.s3{
		background-color: #171914;
	}

	.s4{
		background-image: url( <%= image_path( "dawn.jpg" ) %> );
		background-size: cover;
	}

	.s4 .startGame {
		height: 40px;
		weight: 80px;
		margin: 300px auto;
		display: block;
		text-align: center;

	}

	#button{
		height: 20px;
		width: 50px;
		display: inline-block;
		border: 2px solid white;
		color: white;
	}

	a {
		text-decoration: none;
		color: white;
	}

	a:hover{
		color: black;
	}

	#button:hover{
		color: black;
		background-color: white;
		border: 2px solid black;
	}
